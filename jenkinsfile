String buildShell = "${env.buildShell}"

pipeline {
    agent {
        node {
            label "build-1"
        }
    }
    
    stages{
        stage("MavenBuild") {
            steps {
                script{
                    mavenhome = tool "maven"
                    sh "${mavenhome}/bin/mvn ${buildShell}"
                }
            }
        }
        
        stage("AntBuild") {
            steps {
                script{
                    anthome = tool "ant"
                    sh "${anthome}/bin/ant ${buildShell}"
                }
            }
        }
        
        stage("GradleBuild") {
            steps {
                script{
                    gradlehome = tool "gradle"
                    sh "${gradlehome}/bin/gradle ${buildShell}"
                }
            }
        }
        
        stage("NpnBuild") {
            steps {
                script{
                    npmehome = tool "npm"
                    sh "${npmehome}/bin/npm ${buildShell}"
                }
            }
        }
    }
}
